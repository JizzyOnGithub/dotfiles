; ▄▀▄▀█▓▒░ Bottom ░▒▓█▀▄▀▄ ;
(defwidget bottom []
  (box :space-evenly false :orientation "vertical" :halign "center" :valign "end"
    (label :text weathericon :class "weathericon" :xalign "0.5")
    (label :text weathertemp :class "weathertemp" :xalign "0.5") 
