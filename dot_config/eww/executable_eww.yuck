(defwindow leftbar
           :monitor 0
           :geometry (geometry :x "20"
                               :y "540"
                               :height "100%"
                               :width "40px"
                               :anchor "left c")
           :stacking "fg"
           :reserve (struts :distance "30px" :side "left")
           :windowtype "dock"
           :wm-ignore false
  (centerbox :orientation "vertical"
    (top)
    (middle)
    (bottom)
  )
)


; ▄▀▄▀█▓▒░ Variables ░▒▓█▀▄▀▄ ;
(defpoll timeHr :interval "1s" "date +'%H'")
(defpoll timeMin :interval "1s" "date +'%M'")
(defpoll timeSec :interval "1s" "date +'%S'")
(defpoll weathericon :interval "60m" "/home/jizzy/.config/eww/scripts/owm.sh --icon")
(defpoll weathertemp :interval "60m" "/home/jizzy/.config/eww/scripts/owm.sh --temp")
